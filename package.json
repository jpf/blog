{
  "name": "kimmo.blog",
  "version": "1.0.0",
  "description": "Kimmo Brunfeldt's blog",
  "scripts": {
    "start": "npm run build:development && concurrently --exit -c blue,yellow,green,cyan,pink -n pages,css,rollup,output,serve 'npm run watch:pages' 'npm run watch:postcss' 'npm run watch:rollup' 'npm run watch:output' 'npm run serve'",
    "test": "jest",
    "build:development": "npm run clean && npm run build:pages && npm run copy-public",
    "build": "npm run clean && NODE_ENV=production npm run build:pages && NODE_ENV=production npm run rollup && NODE_ENV=production npm run postcss && npm run build:rss && npm run copy-public && npm run lint:html && npm run minify:html",
    "copy-public": "cp -r public/* output/",
    "minify:html": "find output/ -name \"*.html\" -exec html-minifier -o {} {} --collapse-whitespace --remove-comments --remove-optional-tags --remove-redundant-attributes --remove-tag-whitespace --use-short-doctype \\;",
    "lint:html": "find output/ -name \"*.html\" -exec html-validate {} +",
    "serve": "http-server -g -c-1 ./output",
    "watch:output": "chokidar 'output/**/*'",
    "watch:pages": "chokidar 'src/**/*' 'posts/*.mdx' -c 'npm run build:pages'",
    "watch:postcss": "npm run postcss -- --watch",
    "watch:rollup": "npm run rollup -- --watch --no-watch.clearScreen",
    "postcss": "postcss src/css/main.css -o output/styles.css --verbose",
    "rollup": "rollup -c rollup.config.js",
    "build:pages": "NODE_PATH=./ ts-node --project tsconfig.node.json src/render.tsx",
    "build:rss": "NODE_PATH=./ ts-node --project tsconfig.node.json src/generateRss.ts",
    "clean": "rm -rf ./output ./output-rollup && mkdir output output-rollup",
    "clean:temp-files": "find ./output-rollup -regex '.*\\.\\(ts\\|tsx\\|txt\\)' -type f -delete"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:kimmobrunfeldt/blog.git"
  },
  "keywords": [
    "blog",
    "kimmo"
  ],
  "author": "Kimmo Brunfeldt",
  "license": "UNLICENSED",
  "devDependencies": {
    "@babel/core": "^7.12.16",
    "@k-vyn/coloralgorithm": "^1.0.0",
    "@mdx-js/mdx": "^1.6.22",
    "@mdx-js/react": "^1.6.22",
    "@rollup/plugin-commonjs": "^17.1.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^11.1.1",
    "@rollup/plugin-replace": "^2.3.4",
    "@rollup/plugin-typescript": "^8.1.1",
    "@sinclair/typebox": "^0.12.7",
    "@types/babel__core": "^7.1.12",
    "@types/classnames": "^2.2.11",
    "@types/glob": "^7.1.3",
    "@types/lodash": "^4.14.168",
    "@types/mdx-js__react": "^1.5.3",
    "@types/node": "^14.14.27",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.1",
    "@types/rss": "^0.0.28",
    "@typescript-eslint/eslint-plugin": "^4.15.0",
    "@typescript-eslint/parser": "^4.15.0",
    "ajv": "^7.1.1",
    "autoprefixer": "^10.2.4",
    "chokidar-cli": "^2.1.0",
    "concurrently": "^5.3.0",
    "cssnano": "^4.1.10",
    "eslint": "^7.20.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "glob": "^7.1.6",
    "gray-matter": "^4.0.2",
    "html-minifier": "^4.0.0",
    "html-validate": "^4.6.0",
    "http-server": "^0.12.3",
    "jest": "^26.6.3",
    "mdx.macro": "^0.2.9",
    "next-mdx-remote": "^2.1.3",
    "postcss": "^8.2.6",
    "postcss-cli": "^8.3.1",
    "postcss-import": "^14.0.0",
    "postcss-nested": "^5.0.4",
    "prettier": "^2.2.1",
    "remark": "^13.0.0",
    "remark-parse": "^9.0.0",
    "rollup": "^2.39.0",
    "rollup-plugin-multi-input": "^1.2.0",
    "rollup-plugin-node-polyfills": "^0.2.1",
    "rollup-plugin-progress": "^1.1.2",
    "rollup-plugin-string": "^3.0.0",
    "rollup-plugin-terser": "^7.0.2",
    "rss": "^1.2.2",
    "strip-markdown": "^4.0.0",
    "tailwindcss": "^2.0.3",
    "tailwindcss-children": "^2.1.0",
    "ts-jest": "^26.5.2",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.5"
  },
  "dependencies": {
    "@iconify/icons-teenyicons": "^1.1.0",
    "@iconify/react": "^1.1.4",
    "blobs": "^2.2.0",
    "classnames": "^2.2.6",
    "lodash": "^4.17.20",
    "prism-react-renderer": "^1.1.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  }
}
